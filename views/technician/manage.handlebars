<!doctype html>
<html lang="en">
{{> head}}

<body>
    {{> navbar}}
    {{> aside}}
    <div id="rootContainer">
        <h1>{{title}}</h1>
        <h4>Welcome, <span style="color:green">{{username}}</span></h4>



        <section class="progress">
            <section class="head">
                <h2>Orders in Progress</h4>
            </section>


            <table class>
                <th>Order ID</th>
                <th>Type</th>
                <th>Age</th>
                <th>Manufacturer</th>
                <th>Issue Description</th>



                {{#each ordersInProgress}}

                <tr>
                    <td>
                        {{order_id}}
                    </td>
                    <td>
                        {{appliance_type}}
                    </td>
                    <td>
                        {{appliance_age}}
                    </td>
                    <td>
                        {{appliance_manufacturer}}
                    </td>
                    <td>
                        {{user_issue}}
                    </td>


                </tr>
                {{/each}}

            </table>



            <section class="head">
                <h2>Orders Completed</h4>
            </section>

            <table>
                <th>Order ID</th>
                <th>Type</th>
                <th>Age</th>
                <th>Manufacturer</th>
                <th>Issue Description</th>


                {{#each ordersInCompleted}}

                <tr>
                    <td>
                        {{order_id}}
                    </td>
                    <td>
                        {{appliance_type}}
                    </td>
                    <td>
                        {{appliance_age}}
                    </td>
                    <td>
                        {{appliance_manufacturer}}
                    </td>
                    <td>
                        {{user_issue}}
                    </td>


                </tr>
                {{/each}}

            </table>
        </section>




        <p><a href="/logout">Want to logout?</a></p>
    </div>
    {{> footer}}
</body>
{{> scripts}}


</html>