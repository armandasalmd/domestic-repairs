<!doctype html>
<html lang="en">
{{> head}}

<body>
	{{> navbar}}
	<div id="rootContainer">
		{{#if msg}}
		<p class="msg">{{msg}}</p>
		{{/if}}
		<form action="/register" method="POST" class="login-form">
			<h1 class="title">Sign Up</h1>
			<div class="input-text">
				<input type="text" name="name" placeholder="Enter your name" value="{{name}}">
			</div>
			<div class="input-text">
				<input type="text" name="surname" placeholder="Enter your lastname" value="{{surname}}">
			</div>
			<div class="input-text">
				<input type="email" name="user" placeholder="Enter email" value="{{user}}">
			</div>
			<div class="input-text">
				<input type="password" name="pass" placeholder="Enter password" value="">
			</div>
			<input type="submit" class="submit-button" value="Register">
			<div class="signup-text">
				Already a user? <a href="/login">Login</a>
			</div>
		</form>
	</div>
	{{> footer}}
</body>

{{> scripts}}

</html>